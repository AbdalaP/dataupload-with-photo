<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="370dp"
            android:layout_height="272dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="Dashboard"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableBottomCompat="@drawable/baseline_dashboard_customize_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="         Trabalhadores                      Actividades"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_below="@id/imageview"
            tools:ignore="HardcodedText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imageview">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imageview"
                    android:layout_marginTop="23dp"
                    android:columnCount="2"
                    android:rowCount="3">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/produtores"
                            android:layout_width="wrap_content"
                            android:layout_height="145dp"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/xx"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/baseline_person_24" />

                                        <TextView
                                            android:id="@+id/trabalhadores_count"
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint=""
                                            android:textAlignment="center"
                                            android:textSize="20dp"

                                            tools:ignore="HardcodedText,SpUsage" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Registados"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/xxs"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/sisal_icon" />

                                        <TextView
                                            android:id="@+id/atividades_count"
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint=""
                                            android:textAlignment="center"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Registadas"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/xsx"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/baseline_person_24" />

                                        <TextView
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint="Coming Soon!"
                                            android:textAlignment="center"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Sanzonais (un)"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/xax"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/sisal_icon" />

                                        <TextView
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint="Coming Soon!"
                                            android:textAlignment="center"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Realizadas (un)"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!--  Hidden two more cards in here -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/xasx"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/baseline_person_24" />

                                        <TextView
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint="Coming Soon!"
                                            android:textAlignment="center"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Permanentes (un)"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_below="@id/imageview"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/aaxx"
                                            android:layout_width="84dp"
                                            android:layout_height="56dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/sisal_icon" />

                                        <TextView
                                            android:layout_width="136dp"
                                            android:layout_height="39dp"
                                            android:background="@drawable/lavender_border"
                                            android:hint="Coming Soon!"
                                            android:textAlignment="center"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total Pago (mzn)"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>


                </GridLayout>
        </ScrollView>
</RelativeLayout>