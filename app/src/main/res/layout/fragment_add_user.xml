<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:padding="24dp"
    tools:context=".ui.fragment.AddUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Registo de Trabalhadores"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/edtimage"
            android:layout_width="141dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/green"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:dropDownSelector="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/lavender_border"/>

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/person_add"
            android:drawablePadding="8dp"
            android:hint="Nome"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/user_id"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/baseline_person_pin_24"
            android:drawablePadding="8dp"
            android:hint="ID"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="8dp"
            android:visibility="gone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/docid"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Nr de documento"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/card_id"
            android:textColor="@color/black"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/data_nascimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="8dp"
            android:hint="[Seclecione data...]"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radiogp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homem"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:gravity="center"
                android:textSize="25dp"
                tools:ignore="HardcodedText" />
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulher"
                android:textColor="@color/black"

                android:background="@drawable/lavender_border"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                tools:ignore="HardcodedText" />

        </RadioGroup>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/telefone"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Telefone"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="number"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp" />

        <Spinner
            android:id="@+id/spinner_tipoAct"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:dropDownSelector="@color/black"
            android:layout_marginTop="15dp"
            android:hint="okkkkkkkkkkkk"
            android:background="@drawable/lavender_border"/>


        <Button
            android:id="@+id/Submit"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:text="Registar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir Actividade"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            app:cornerRadius = "30dp"
            android:background="@color/green"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>